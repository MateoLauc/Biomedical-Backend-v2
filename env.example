NODE_ENV=development
PORT=4000

# Database (Neon/Vercel)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# CORS
CORS_ORIGINS=http://localhost:3000

# Auth
JWT_ACCESS_SECRET=change_me
JWT_REFRESH_SECRET=change_me
# Access token TTL by role (seconds). Admin/super_admin: 12h. Customer: 24h.
JWT_ACCESS_TTL_ADMIN_SECONDS=43200
JWT_ACCESS_TTL_CUSTOMER_SECONDS=86400
JWT_REFRESH_TTL_SECONDS=2592000

# Mailtrap (API v2 – transactional)
MAILTRAP_API_KEY=
MAILTRAP_USE_SANDBOX=
MAILTRAP_INBOX_ID=
MAIL_FROM="Biomedical <no-reply@biomedicalng.com>"

# Brand (for email templates – match frontend globals.css)
BRAND_PRIMARY_COLOR=#0192DD
BRAND_PRIMARY_50=#E6F4FC
BRAND_BG_COLOR=#F4F5F5
BRAND_TEXT_COLOR=#333536
# Logo is embedded from src/lib/email/assets/logo.png (copied from frontend); BRAND_LOGO_URL no longer used for banner

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Sentry
SENTRY_DSN=

# Paystack
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_SECRET=

